.Side-bar
  .Side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to "/groups/new", class: "" do
          = icon('far', 'edit', class: "icon")
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "icon")
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group-name
            = group.name
          .group-text
